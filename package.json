{
  "name": "nownow-tours-africa",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && echo 'âœ… Build completed successfully'",
    "preview": "vite preview",
    "build:debug": "vite build --mode development",
    "clean": "rm -rf dist && npm run build",
    "db:create": "wrangler d1 create nownow-tours-db",
    "db:setup": "wrangler d1 execute nownow-tours-db --file=./database/schema.sql",
    "db:query": "wrangler d1 execute nownow-tours-db --command",
    "deploy": "npm run build && wrangler pages deploy dist"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.544.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "cloudflare": {
    "build_command": "npm run build",
    "build_output_dir": "dist"
  }
}
